<%= form_for @user, html: {multipart: true} do |f| %>
    <%= render partial: 'partials/form_errors', locals: {model: @user} %>
    <form class="form-inline">
      <div class="form-group">
        <div class="input-group">
          <%= f.label :name, class: "input-group-addon" %>
          <%= f.text_field :name, class: 'form-control', autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <%= f.label :email, class: "input-group-addon" %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :avatar %>
        <p><%= image_tag(@user.avatar.thumb.url) if @user.avatar? %></p>
        <%= f.file_field :avatar %>
      </div>

      <div class="actions">
        <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
        или <%= link_to 'Вернуться', :back %>
      </div>
    </form>
<% end %>


