<%# Универсальный паршиал отображения ошибок валидации любой модели %>
<% errors = model.errors %>

<% if errors.any? %>
    <div class="alert alert-warning">
      <div class="lead buffer-bottom">
        В вашей форме <%= errors.count %> <%= t('activerecord.errors.models.errors.count', count: errors.count) %>
      </div>

      <ul>
        <% errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>
